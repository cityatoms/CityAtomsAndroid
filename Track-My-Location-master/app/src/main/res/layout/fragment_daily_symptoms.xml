<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:clickable="true"
    android:focusable="true"
    android:overScrollMode="never"
    tools:context=".startupui.RegisterAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/close_sym"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorWhite"
            android:src="@drawable/ic_close"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning Joe,\nHow are you feeling today?"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:weightSum="1"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/layout_sym_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_non_select_sym"
                android:gravity="center"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sore_throat_grey"/>

                <TextView
                    android:id="@+id/txtSym1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sore throat"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sym_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_non_select_sym"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dry_grey"/>
                <TextView
                    android:id="@+id/txtSym2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Dry cough,\nno mucus"
                    android:textColor="@color/primaryTextColor"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:weightSum="1"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/layout_sym_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_non_select_sym"
            android:gravity="center"
            android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_fever"/>

            <TextView
                android:id="@+id/txtSym3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fever"
                android:textColor="@color/primaryTextColor"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_sym_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_non_select_sym"
            android:gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shortness_breath_grey"/>

            <TextView
                android:id="@+id/txtSym4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Shortness of breath"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:weightSum="1"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/layout_sym_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_non_select_sym"
                android:gravity="center"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/loss_taste_grey"/>

                <TextView
                    android:id="@+id/txtSym5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/primaryTextColor"
                    android:text="Loss of smell\n and taste"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sym_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_non_select_sym"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pneumonia_feelin_grey"/>
                <TextView
                    android:id="@+id/txtSym6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pneumonia\nlike feeling"
                    android:textColor="@color/primaryTextColor"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Once you click ‘Save’, this will be recorded."
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/brownGray"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/subSubText"
            android:alpha="0.3"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_save_symptoms"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_btn_disable"
            android:text="Save Symptoms"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="I am diagnosed with Covid19"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/colorCenter"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    </LinearLayout>

</ScrollView>